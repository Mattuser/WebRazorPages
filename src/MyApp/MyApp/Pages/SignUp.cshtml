@page
@model MyApp.Pages.SignUpModel
@{
}

<h3>@ViewData["confirmation"]</h3>
<form novalidate method="post">
    <div class=" form-row">
        <div class="col-md-4 mb-3">
            <label for="UserName">Username</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="UserName">@@</span>
                </div>
                <div>
                    <input asp-for="SignUpRequest.UserName" type="text" class="form-control" id="UserName" placeholder="Username" aria-describedby="inputGroupPrepend" required>
                </div>
                <span asp-validation-for="SignUpRequest.UserName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <label for="Password">Password</label>
            <input asp-for="SignUpRequest.Password" type="password" class="form-control" id="Password" placeholder="Password" required>
            <span asp-validation-for="SignUpRequest.Password" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label for="Email">Email</label>
            <input asp-for="SignUpRequest.Email" type="email" class="form-control" id="Email" placeholder="Email" required>
            <span asp-validation-for="SignUpRequest.Email" class="text-danger"></span>
        </div>

        <div class="col-md-4 mb-3">
            <label for="FirstName">First name</label>
            <input asp-for="SignUpRequest.FirstName" type="text" class="form-control" id="LastName" placeholder="First name" required>
            <span asp-validation-for="SignUpRequest.FirstName" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label for="LastName">Last name</label>
            <input asp-for="SignUpRequest.LastName" type="text" class="form-control" id="LastName" placeholder="Last name" required>
            <span asp-validation-for="SignUpRequest.LastName" class="text-danger"></span>
        </div>
        <div class="form-row">
            <div class="col-md-4 mb-3">
                <label for="City">City</label>
                <input asp-for="SignUpRequest.City" type="text" class="form-control" id="City" placeholder="City" required>
                <span asp-validation-for="SignUpRequest.City" class="text-danger"></span>
            </div>
            <div class="col-md-3 mb-3">
                <label for="State">State</label>
                <input asp-for="SignUpRequest.State" type="text" class="form-control" id="State" placeholder="State" required>
                <span asp-validation-for="SignUpRequest.State" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="form-check">
                <input asp-for="SignUpRequest.TermsAgreed" class="form-check-input" type="checkbox" id="TermsAgreed" required>
                <label class="form-check-label" for="TermsAgreed">
                    Agree to terms and conditions
                </label>
                <div>
                    <span asp-validation-for="SignUpRequest.TermsAgreed" class="text-danger"></span>
                </div>
            </div>
            
        </div>
        <button class="btn btn-primary" type="submit">Enviar</button>
    </div>

</form>

<script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.6.0.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.3/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>